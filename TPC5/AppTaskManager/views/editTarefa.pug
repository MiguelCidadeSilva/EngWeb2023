extends layout

block content
    header.w3-container.w3-teal
        h1 Editar Tarefa
    .w3.container
            form.w3-container(method="POST")
                fieldset.w3-light-grey
                    legend Editar Tarefa
                    label ID
                    input.w3-input.w3-round(type="text" name="id" value=tarefa.id readonly)
                    label Who?
                    br
                    select.w3-select.w3-round(name="who")
                        each user in listOfUsers
                            if (user.id != tarefa.who)
                                option(value=user.id)= user.nome
                            else
                                option(value=user.id selected)=user.nome
                    br
                    label What?
                    input.w3-input.w3-round(type="text" name="what" value=tarefa.what)
                    label To Do
                    input.w3-radio(type="radio" name="done" value="0" checked, disabled)
                    label Done
                    input.w3-radio(type="radio" name="done" value="1", disabled)   
                br
                button.w3-btn.w3-round-xlarge.w3-teal(type="submit") Submit
                a.w3-btn.w3-round-xlarge.w3-teal(href="/") Voltar